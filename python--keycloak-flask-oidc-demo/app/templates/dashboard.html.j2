{% extends "layout.html.j2" %}

{% block body %}
<h2 class="text-center">Your User Details</h2>

<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <div class="jumbotron">
			<table>
				<tbody>
					<tr>
						<th scope="row" class="pr-3">User ID:</th>
						<td>{{ g.user.sub }}</td>
					</tr>
					<tr>
						<th scope="row" class="pr-3">Name:</th>
						<td>{{ g.user.name }}</td>
					</tr>
					<tr>
						<th scope="row" class="pr-3">Given Name:</th>
						<td>{{ g.user.given_name }}</td>
					</tr>
					<tr>
						<th scope="row" class="pr-3">Family Name:</th>
						<td>{{ g.user.family_name }}</td>
					</tr>
					<tr>
						<th scope="row" class="pr-3">Preferred Username:</th>
						<td>{{ g.user.preferred_username }}</td>
					</tr>
					<tr>
						<th scope="row" class="pr-3">Email:</th>
						<td>{{ g.user.email }}</td>
					</tr>
					<tr>
						<th scope="row" class="pr-3">Email Verified:</th>
						<td>{{ g.user.email_verified }}</td>
					</tr>
				</tbody>
			</table>
    </div>
  </div>
</div>
{% endblock %}
